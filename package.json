{
  "name": "Trestle",
  "productName": "Trestle",
  "description": "The Craftable Writing Program",
  "version": "1.0.0",
  "author": "Ryestory",
  "homepage": "http://scribe.ryestory.com",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "Trestle",
    "asar": true,
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build --x64 -m --publish never",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.24.0",
    "chai": "^4.1.2",
    "electron": "^1.6.2",
    "electron-builder": "^19.37.2",
    "electron-mocha": "^4.0.3",
    "electron-rebuild": "^1.6.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^7.0.0",
    "gulp-batch": "^1.0.5",
    "gulp-concat": "^2.6.1",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "mocha": "^4.0.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.5.0",
    "spectron": "^3.3.0",
    "yargs": "^9.0.1"
  },
  "dependencies": {
    "deepmerge": "^2.0.0",
    "draft-js": "^0.10.0",
    "draft-js-inline-toolbar-plugin": "^2.0.0-beta11",
    "draft-js-plugins-editor": "^2.0.0-beta11",
    "electron-spellchecker": "^1.1.0",
    "fs-extra": "^4.0.2",
    "fs-jetpack": "^1.2.0",
    "immutable": "^3.8.1",
    "interact.js": "^1.2.6",
    "react": "^16.0.0",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-perf": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-burger-menu": "^2.1.1",
    "react-dom": "^16.0.0",
    "react-draft-wysiwyg": "^1.5.8",
    "react-motion": "^0.5.2",
    "react-motion-ui-pack": "^0.10.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "reselect": "^3.0.1",
    "shallowequal": "^1.0.2"
  }
}
